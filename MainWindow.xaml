<Window x:Class="ToastNotificationWindow.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>            
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Grid.Column="0" Content="Show Info" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Click="ShowInfoButton_Click"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Show Error" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
